# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias aliases='vim ~/.dotfiles/bash/aliases'
# alias b='ssh -t ben@benorenstein.com screen -rd irc'
alias t='ssh orthodox@alkema.ca'
alias training='cd ~/code/clac-training'
alias jobs='cd ~/code/clac-jobs'
alias d='cd ~/.dotfiles'
alias g='git status'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias get='sudo apt-get install'
alias gg='git log'
alias i='screen -rd irc'
alias irb='irb --readline -r irb/completion'
alias rdm="rake db:migrate"
alias rc='rails console'
alias rs='rails server -p 3001'
alias s='screen -dr rails'
alias sc='script/console'
alias so='source ~/.dotfiles/bash/aliases'
alias ss='ruby script/server -p 3001'
